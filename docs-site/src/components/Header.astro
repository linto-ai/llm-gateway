---
interface Props {
  lang: 'en' | 'fr';
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
const base = import.meta.env.BASE_URL;

const t = {
  en: {
    home: 'Home',
    features: 'Features',
    architecture: 'Architecture',
    api: 'API',
    switchLang: 'FR'
  },
  fr: {
    home: 'Accueil',
    features: 'FonctionnalitÃ©s',
    architecture: 'Architecture',
    api: 'API',
    switchLang: 'EN'
  }
};

const texts = t[lang];

// Determine links based on language
const homeLink = lang === 'fr' ? `${base}/fr/` : `${base}/`;
const featuresLink = lang === 'fr' ? `${base}/fr/features/` : `${base}/features/`;
const architectureLink = lang === 'fr' ? `${base}/fr/architecture/` : `${base}/architecture/`;
const apiLink = lang === 'fr' ? `${base}/fr/api/` : `${base}/api/`;

// Language switch link
const switchLangLink = lang === 'fr'
  ? currentPath.replace('/fr/', '/').replace('/fr', '/') || `${base}/`
  : `${base}/fr${currentPath.replace(base, '')}`;

const isActive = (path: string) => {
  const normalizedCurrent = currentPath.endsWith('/') ? currentPath : `${currentPath}/`;
  const normalizedPath = path.endsWith('/') ? path : `${path}/`;
  return normalizedCurrent === normalizedPath;
};
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-dark-bg/80 backdrop-blur-sm border-b border-light-border dark:border-dark-border">
  <nav class="container py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href={homeLink} class="flex items-center gap-2 text-xl font-semibold no-underline text-gray-900 dark:text-white hover:no-underline">
        <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="32" height="32" rx="4" class="fill-accent dark:fill-accent-dark"/>
          <path d="M8 10h16M8 16h12M8 22h8" stroke="white" stroke-width="2" stroke-linecap="round"/>
          <circle cx="24" cy="22" r="3" fill="white"/>
        </svg>
        <span><span class="text-accent dark:text-accent-dark">LinTO.ai</span>/LLM Gateway</span>
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center gap-6">
        <a
          href={homeLink}
          class:list={[
            'no-underline hover:text-accent dark:hover:text-accent-dark transition-colors',
            isActive(homeLink) ? 'text-accent dark:text-accent-dark font-medium' : 'text-gray-600 dark:text-gray-300'
          ]}
        >
          {texts.home}
        </a>
        <a
          href={featuresLink}
          class:list={[
            'no-underline hover:text-accent dark:hover:text-accent-dark transition-colors',
            isActive(featuresLink) ? 'text-accent dark:text-accent-dark font-medium' : 'text-gray-600 dark:text-gray-300'
          ]}
        >
          {texts.features}
        </a>
        <a
          href={architectureLink}
          class:list={[
            'no-underline hover:text-accent dark:hover:text-accent-dark transition-colors',
            isActive(architectureLink) ? 'text-accent dark:text-accent-dark font-medium' : 'text-gray-600 dark:text-gray-300'
          ]}
        >
          {texts.architecture}
        </a>
        <a
          href={apiLink}
          class:list={[
            'no-underline hover:text-accent dark:hover:text-accent-dark transition-colors',
            isActive(apiLink) ? 'text-accent dark:text-accent-dark font-medium' : 'text-gray-600 dark:text-gray-300'
          ]}
        >
          {texts.api}
        </a>
      </div>

      <!-- Right side: GitHub + Language switch -->
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/linto-ai/llm-gateway"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 dark:text-gray-300 hover:text-accent dark:hover:text-accent-dark no-underline"
          aria-label="GitHub"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
        </a>
        <a
          href={switchLangLink}
          class="btn btn-secondary text-sm"
        >
          {texts.switchLang}
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        class="md:hidden p-2 text-gray-600 dark:text-gray-300"
        aria-label="Menu"
        id="mobile-menu-btn"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2 border-t border-light-border dark:border-dark-border pt-4">
      <div class="flex flex-col gap-3">
        <a href={homeLink} class="text-gray-600 dark:text-gray-300 no-underline">{texts.home}</a>
        <a href={featuresLink} class="text-gray-600 dark:text-gray-300 no-underline">{texts.features}</a>
        <a href={architectureLink} class="text-gray-600 dark:text-gray-300 no-underline">{texts.architecture}</a>
        <a href={apiLink} class="text-gray-600 dark:text-gray-300 no-underline">{texts.api}</a>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
