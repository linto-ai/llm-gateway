---
interface Props {
  content: string;
  caption?: string;
}

const { content, caption } = Astro.props;
---

<figure class="my-6">
  <div class="overflow-x-auto bg-light-code-bg dark:bg-dark-code-bg border border-light-border dark:border-dark-border rounded-lg p-4 md:p-6">
    <pre class="font-mono text-xs sm:text-sm text-gray-800 dark:text-gray-200 whitespace-pre leading-relaxed m-0 bg-transparent">{content}</pre>
  </div>
  {caption && (
    <figcaption class="mt-2 text-center text-sm text-gray-500 dark:text-gray-400 italic">
      {caption}
    </figcaption>
  )}
</figure>
