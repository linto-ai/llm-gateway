---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CodeBlock from '../components/CodeBlock.astro';

import en from '../i18n/en.json';

const t = en;
const lang = 'en';
const currentPath = Astro.url.pathname;

const quickStartCode = `git clone https://github.com/linto-ai/llm-gateway.git
cd llm-gateway
docker compose up --build

# API: http://localhost:8000/docs
# Frontend: http://localhost:8001`;
---

<Base title={t.meta.title} description={t.meta.description} lang={lang}>
  <Header lang={lang} currentPath={currentPath} />

  <main class="flex-1">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-b from-gray-50 to-white dark:from-dark-code-bg dark:to-dark-bg">
      <div class="container text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6">
          LLM Gateway
        </h1>
        <p class="text-xl md:text-2xl text-accent dark:text-accent-dark mb-4">
          {t.home.tagline}
        </p>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-8">
          {t.home.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#quick-start" class="btn btn-primary">
            {t.home.getStarted}
          </a>
          <a
            href="https://github.com/linto-ai/llm-gateway"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary"
          >
            {t.home.viewOnGithub}
          </a>
        </div>
      </div>
    </section>

    <!-- Problem Section -->
    <section class="section bg-gray-50 dark:bg-dark-code-bg">
      <div class="container">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            {t.home.problemTitle}
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 font-medium">
            {t.home.problemSubtitle}
          </p>
        </div>

        <p class="text-lg text-gray-700 dark:text-gray-300 text-center max-w-3xl mx-auto mb-10">
          {t.home.problemIntro}
        </p>

        <div class="grid md:grid-cols-3 gap-6 mb-10">
          <div class="card text-center">
            <div class="text-3xl mb-3">üîÑ</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t.home.problem1.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{t.home.problem1.description}</p>
          </div>
          <div class="card text-center">
            <div class="text-3xl mb-3">üí•</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t.home.problem2.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{t.home.problem2.description}</p>
          </div>
          <div class="card text-center">
            <div class="text-3xl mb-3">üîá</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t.home.problem3.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{t.home.problem3.description}</p>
          </div>
        </div>

        <div class="max-w-4xl mx-auto">
          <img src="/llm-gateway/images/without.png" alt="Without LLM Gateway - duplicated code" class="w-full rounded-lg shadow-lg" />
        </div>
      </div>
    </section>

    <!-- Solution Section -->
    <section class="section">
      <div class="container">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            {t.home.solutionTitle}
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 font-medium">
            {t.home.solutionSubtitle}
          </p>
        </div>

        <p class="text-lg text-gray-700 dark:text-gray-300 text-center max-w-3xl mx-auto mb-10">
          {t.home.solutionIntro}
        </p>

        <div class="grid md:grid-cols-3 gap-6 mb-10">
          <div class="card text-center">
            <div class="text-3xl mb-3">üõ†Ô∏è</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t.home.solution1.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{t.home.solution1.description}</p>
          </div>
          <div class="card text-center">
            <div class="text-3xl mb-3">üîå</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t.home.solution2.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{t.home.solution2.description}</p>
          </div>
          <div class="card text-center">
            <div class="text-3xl mb-3">‚öôÔ∏è</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t.home.solution3.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{t.home.solution3.description}</p>
          </div>
        </div>

        <div class="max-w-4xl mx-auto">
          <img src="/llm-gateway/images/with.png" alt="With LLM Gateway - unified API" class="w-full rounded-lg shadow-lg" />
        </div>
      </div>
    </section>

    <!-- Frontend Section -->
    <section class="section bg-gray-50 dark:bg-dark-code-bg">
      <div class="container">
        <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            {t.home.frontendTitle}
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            {t.home.frontendDescription}
          </p>
        </div>

        <div class="max-w-5xl mx-auto">
          <img
            src="/llm-gateway/images/frontend-screenshot.png"
            alt="LLM Gateway Admin Interface"
            class="w-full rounded-lg shadow-2xl border border-gray-200 dark:border-dark-border"
          />
        </div>
      </div>
    </section>

    <!-- In Production Section -->
    <section class="section">
      <div class="container">
        <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            {t.home.productionTitle}
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            {t.home.productionDescription}
          </p>
        </div>

        <div class="flex flex-wrap justify-center items-center gap-10 md:gap-16">
          <img src="/llm-gateway/images/clients/logo-elysee.png" alt="Elysee" class="h-16 md:h-20 object-contain grayscale hover:grayscale-0 transition-all duration-300" />
          <img src="/llm-gateway/images/clients/logo-ep.svg" alt="European Parliament" class="h-12 md:h-16 object-contain grayscale hover:grayscale-0 transition-all duration-300" />
          <img src="/llm-gateway/images/clients/logo-UE.svg" alt="European Commission" class="h-12 md:h-16 object-contain grayscale hover:grayscale-0 transition-all duration-300" />
          <img src="/llm-gateway/images/clients/logo-edf.svg" alt="EDF" class="h-10 md:h-14 object-contain grayscale hover:grayscale-0 transition-all duration-300" />
          <img src="/llm-gateway/images/clients/logo-cnes.jpg" alt="CNES" class="h-12 md:h-16 object-contain grayscale hover:grayscale-0 transition-all duration-300" />
        </div>

        <div class="text-center mt-8">
          <a
            href="https://linto.ai/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-accent dark:text-accent-dark hover:underline font-medium"
          >
            linto.ai ‚Üí
          </a>
        </div>
      </div>
    </section>

    <!-- Quick Start Section -->
    <section id="quick-start" class="section">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              {t.home.quickStartTitle}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
              {t.home.quickStartDescription}
            </p>
          </div>

          <CodeBlock code={quickStartCode} lang="bash" />
        </div>
      </div>
    </section>
  </main>

  <Footer lang={lang} />
</Base>
