# Docker UID/GID (for development)
# Match your host user to avoid permission issues: id -u && id -g
UID=1000
GID=1000

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=llm_gateway
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=llm_gateway
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# =============================================================================
# Redis / Celery
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password
SERVICES_BROKER=redis://task-broker-redis:6379
SERVICES_BROKER_PASSWORD=${REDIS_PASSWORD}

# Worker replicas (use docker compose --scale celery-worker=N or this variable)
CELERY_WORKERS=1

# =============================================================================
# Security
# =============================================================================
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# =============================================================================
# API Server
# =============================================================================
HTTP_PORT=8000
DEBUG=false

# CORS origins (comma-separated, or "*" for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# =============================================================================
# LLM API Retry Configuration
# =============================================================================
API_MAX_RETRIES=6
API_RETRY_MIN_DELAY=1
API_RETRY_MAX_DELAY=60

# =============================================================================
# Storage
# =============================================================================
# HuggingFace tokenizers cache
TOKENIZER_STORAGE_PATH=./tokenizers
